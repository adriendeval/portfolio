{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <h1 class="mb-12 text-center text-4xl font-bold text-gray-800">Formations</h1>
    
